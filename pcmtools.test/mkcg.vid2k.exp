set test "package"
spawn ./src/mkcg.vid2k
expect {
  -re "Package: pcmtools\r\n" {
    pass "$test"
  }
  eof {fail "$test"}
}

set test "version"
spawn ./src/mkcg.vid2k
expect {
  -re "Version: 2015-devel\r\n" {
    pass "$test"
  }
  eof {fail "$test"}
}

set test "provides"
spawn ./src/mkcg.vid2k
expect {
  -re "PC/M VID2k character generator PROM" {
    pass "$test"
  }
  eof {fail "$test"}
}

set test "hexdump-single"
spawn ./src/mkcg.vid2k --hexdump \
      ${srcdir}/data/CG_VID2K/original/ascii_0x30.xpm
expect {
  -re "^0000000: C7 BB B3 AB 9B BB C7 FF FF FF FF FF FF FF FF FF \r\n" {
    pass "$test"
  }
  eof {fail "$test"}
}

set test "hexdump-single-negated"
spawn ./src/mkcg.vid2k --neg --hexdump \
      ${srcdir}/data/CG_VID2K/original/ascii_0x30.xpm
expect {
  -re "^.*: unrecognized option '--neg'\r\n" {
    pass "$test"
  }
  eof {fail "$test"}
}

set test "overview-original"
spawn ./src/mkcg.vid2k --quiet -o 32 \
      [lsort [glob -dir "${srcdir}/data/CG_VID2K/original" "*.xpm"]]
expect {
  -re "^\/\* XPM \*\/\r\n" {
    pass "$test"
  }
  eof {fail "$test"}
}
